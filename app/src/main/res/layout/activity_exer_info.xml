<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExerInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_ExerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_ExerInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동 이름"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/txt_exerInfodifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="난이도 상" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_ExerInfoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="승모근 강화" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Infocheck_babel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/checkbox_off_background" />

                <TextView
                    android:id="@+id/InfotextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바벨 필요" />

                <ImageView
                    android:id="@+id/Infocheck_dumbel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/checkbox_off_background" />

                <TextView
                    android:id="@+id/InfotextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="덤벨 필요" />

                <ImageView
                    android:id="@+id/Infocheck_outfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/checkbox_off_background" />

                <TextView
                    android:id="@+id/InfotextView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기구 필요" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_ExerJoin"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="운동 구독하기" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_youtubeGo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="6dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_ExerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="운동에 대한 설명"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textSize="18sp" />
</LinearLayout>